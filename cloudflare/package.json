{
  "name": "app-cloudflare",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "build": "cd .. && npm run build && mkdir -p cloudflare/dist/public && cp -r dist/public/* cloudflare/dist/public/",
    "build:worker": "esbuild worker/index.ts --bundle --outdir=dist --format=esm --platform=browser --external:@cloudflare/workers-types",
    "deploy": "npm run build && wrangler deploy --keep-vars",
    "deploy:preview": "npm run build && wrangler versions upload",
    "deploy:production": "npm run build && wrangler deploy --env production",
    "tail": "wrangler tail",
    "secret:set": "wrangler secret put",
    "types": "wrangler types"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "bcryptjs": "^2.4.3",
    "@neondatabase/serverless": "0.10.4",
    "drizzle-orm": "0.39.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250101.0",
    "wrangler": "^3.99.0",
    "esbuild": "^0.25.0",
    "typescript": "^5.6.3",
    "@types/bcryptjs": "^2.4.6"
  }
}
